<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hadi.superherolexicon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperheroLexicon"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name="com.hadi.superherolexicon.activity.HeroDetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_hero_details"
            android:theme="@style/Theme.SuperheroLexicon.NoActionBar" />
        <activity
            android:name="com.hadi.superherolexicon.activity.HeroesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SuperheroLexicon.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>